html, body
  margin 0
  padding 0
  font-family 'Source Sans Pro', Helvetica, Arial, sans-serif
  background-color #ededed
  width 100%
  height 100%
  overflow hidden

.wrap
  position absolute
  top 0; bottom 0
  left 0; right 0
  overflow hidden

  > div
    box-sizing border-box

  .side
    width 300px
    height 100%
    position absolute
    top 0; bottom 0
    left 0
    background-color #1d1d1d
    z-index 3
    transition left 200ms, right 200ms
    overflow-y auto
    overflow-x hidden

    &.expanded
      width auto
      left 0 !important; right 50px

    .hamburger
      display none
      position absolute
      width 40px
      height 40px
      top 5px
      right 5px

    .logo
      width 150px
      height 150px
      margin 20px 75px
      border-radius 5px

    hr
      width 75%
      margin-bottom 35px
      background-color #dbdbdb

    a
      display block
      text-decoration none
      color #e4e4e4
      font-size 1.4em
      text-align center
      margin 0 auto
      padding 20px
      background-color #1d1d1d
      transition background 150ms

      &:hover
        background-color #cd3636



  .content
    position absolute
    top 0; bottom 0
    left 300px; right 0
    overflow auto
    padding 50px


hr
  width 90%
  height 1px
  border 0
  background-color #3e3e3e
  margin 15 auto

h1
  text-align center
  margin 0
  margin-bottom 40px
  font-weight 400
  font-size 50px

@media (max-width 550px)
  .content
    padding 20px !important
  .wrap
    .side
      left -250px !important

    .humburger
      display block !important

    .content
      left 50px !important
