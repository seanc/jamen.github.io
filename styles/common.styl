// main: index.styl

html, body
  margin 0
  padding 0
  font-family 'Source Sans Pro', Helvetica, Arial, sans-serif
  background-color #ededed
  width 100%
  height 100%

.wrap
  position absolute
  top 0; bottom 0
  left 0; right 0

  > div
    box-sizing border-box

  .side
    width 300px
    height 100%
    position absolute
    top 0; bottom 0
    left 0
    padding 25px
    background-color #222222

    .logo
      width 150px
      height 150px
      margin 5px 50px
      border-radius 5px

    hr
      display block
      width 80%
      height 1px
      border 0
      margin 10 auto
      margin-bottom 35px
      background-color #dbdbdb

    a
      display block
      text-decoration none
      color #dbdbdb
      font-size 1.5em
      text-align center
      margin 25px auto



  .content
    position absolute
    top 0; bottom 0
    left 300px; right 0
    overflow auto
    padding 50px
