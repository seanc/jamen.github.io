// main:../index.styl
.contact-item
  display flex
  border-bottom 1px solid #E0E0E0
  width 100%
  float left

  > .type
    max-width 50px
    max-height 50px
    text-align center
    padding 15px 15px
    border-radius 10px !important

  > .contacts
    display flex
    align-items stretch
    width 100%
    height 100%
    background-color none
    line-height 3.2

    > .input
      box-sizing border-box
      display block
      width 100%
      height 100%
      border 0
      font-size 1.2em
      font-family 'Source Sans Pro', Helvetica, Arial, sans-serif
      padding 10px 15px
      outline none
      backround-color none

      a { text-decoration:none; }

  &.-last
    border-bottom 0

  &.-title
    background-color #27ae60
    color #FFFFFF

  @media (max-width $mobile-size)
    width 100%
