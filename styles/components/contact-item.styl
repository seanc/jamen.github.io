// main:../index.styl
.contact-item
  display flex
  border-bottom 1px solid #E0E0E0

  > .type
    width 100px
    text-align center
    padding 15px 10px

  > .contacts
    display flex
    align-items stretch
    width 100%
    height 100%
    background-color none

    > .input
      box-sizing border-box
      display block
      width 100%
      height 100%
      border 0
      font-size 1em
      font-family 'Source Sans Pro', Helvetica, Arial, sans-serif
      padding 15px 15px
      outline none
      backround-color none

  &.-last
    border-bottom 0

  &.-title
    background-color #27ae60
    color #FFFFFF
