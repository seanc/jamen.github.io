// main:../index.styl
.project-repo
  box-sizing border-box
  width 100%
  height 48px
  margin 10px 0

  > .title
    display flex
    align-items center

    > .mega-octicon
      font-size 48px
      opacity 0.5
      flex-shrink 0


    > .name
      display inline-block
      font-size 1.3em
      margin-left 15px
      line-height 0.9
      flex-shrink 0

    > .desc
      box-sizing border-box
      height 100%
      overflow hidden
      padding 3px
      font-size 1.3em
      margin-left 15px
      line-height 0.9
      opacity 0.5
      white-space nowrap
      text-overflow ellipsis
      flex-shrink 1
