// main:../index.styl
.repo-items
  margin-top 10px

  > .item
    margin-right 5px
    color #000
    text-decoration none

    &:before
      content ''
      display inline-block
      width 16px
      height 16px
      background-size 100% 100%
      margin-top -3px
      vertical-align middle
      opacity .5
      transition all 200ms

    &:hover:before
      opacity 1

    &.-stars:before
      background-image url(../images/star.svg)

    &.-forks:before
      background-image url(../images/fork.svg)
