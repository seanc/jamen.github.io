// main:../index.styl
.site-content
  box-sizing border-box
  width 100%
  height 100%
  background-color #F7F7F7
  overflow-y auto

  > .title
    width 100%
    margin 30px 0
    margin-bottom 0
    font-size 3em
    font-weight 400
    text-align center


  @media (max-width $mobile-size)
    margin-top 49px
    padding 50px 10px
    padding-top 0
    overflow-x hidden
