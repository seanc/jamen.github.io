// main:../index.styl
.site-content
  box-sizing border-box
  width 100%
  height 100%
  background-color #F7F7F7
  overflow-y auto

  > .title
    width 100%
    padding 30px 0
    margin 0
    font-size 3em
    font-weight 400
    text-align center
    background-color #FFF
    border-bottom 1px solid #E0E0E0


  @media (max-width $mobile-size)
    margin-top 49px
    padding 50px 0
    padding-top 0
    overflow-x hidden

    > .title
      padding 0 0
      padding-bottom 30px
