// main:../index.styl
.site-nav
  box-sizing border-box
  display block
  width 250px
  height 100%
  max-height 100%
  background-color #0F0F0F

  > .logo
    display block
    width 100px
    height 100px
    margin 50px auto

  > .link
    box-sizing border-box
    display block
    width 100%
    padding 20px 0
    text-decoration none
    color #FFF
    font-size 1.3em
    text-align center
    transition background 200ms

    &:hover
      background-color #c0392b

  > .toggle
    box-sizing border-box
    position fixed
    z-index 5
    top 0
    left 0
    display none
    width 50px
    height 50px
    max-width 50px
    max-height 50px
    padding 5px

    > .icon
      width 100%
      height 100%

  // Mobile
  @media (max-width $mobile-size)
    min-width 100%
    margin-left -100%
    overflow-y auto
    transition margin 250ms
    margin-top 49px
    padding-bottom 50px

    > .toggle
      display block

    &.-active
      margin-left 0
